        <h2 class="text-xl font-bold text-gray-800">Navigation</h2>
    </div>
    <div class="px-2">
        <ul class="space-y-2">
            <li>
              <a href=`${baseUrl}/` class="flex items-center px-4 py-2 text-gray-700 hover:bg-gray-100 rounded-lg">
                    Home
                </a>
            </li>
            <li>
              <a href=`${baseUrl}/posts/` class="flex items-center px-4 py-2 text-gray-700 hover:bg-gray-100 rounded-lg">
