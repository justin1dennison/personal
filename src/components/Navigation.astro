---
const baseUrl = import.meta.env.BASE_URL;
---

<nav class="w-64 bg-white shadow-lg h-screen">
  <div class="p-4">
    <h2 class="text-xl text-center font-bold text-gray-800">JD</h2>
  </div>
  <div class="px-2">
    <ul class="space-y-2">
      <li>
        <a
          href=`${baseUrl}/`
          class="flex items-center px-4 py-2 text-gray-700 hover:bg-gray-100 rounded-lg"
        >
          Home
        </a>
      </li>
      <li>
        <a
          href=`${baseUrl}/posts/`
          class="flex items-center px-4 py-2 text-gray-700 hover:bg-gray-100 rounded-lg"
        >
          Posts
        </a>
      </li>
      <li>
        <a
          href=`${baseUrl}/journal/`
          class="flex items-center px-4 py-2 text-gray-700 hover:bg-gray-100 rounded-lg"
        >
          Journal
        </a>
      </li>

    </ul>
  </div>
