---
import PageLayout from "./LandingLayout.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<PageLayout title={title}>
  <article class="blog-post">
    <header class="mb-8">
      <h1 class="text-4xl font-bold text-gray-900">{title}</h1>
    </header>

    <div class="prose prose-lg max-w-none bg-white rounded-lg shadow-md p-8">
      <slot />
    </div>
  </article>
</PageLayout>
